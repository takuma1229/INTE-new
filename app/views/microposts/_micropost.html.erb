
<div class="micropost-wrapper">
  <li id="micropost-<%= micropost.id %>" class="micropost-part">
    <div class="left-part">
      <% if micropost.user.image? %>
        <%= link_to image_tag("#{micropost.user.image}"), micropost.user, class: "micropost-user-image" %>
      <% else %>
        <%= link_to image_tag("default_user.jpeg"), micropost.user, class: "micropost-user-image" %>
      <% end %>  
    </div>
    <div class="right-part">
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
      <span class="content">
        <%= micropost.content %>
        <%= image_tag micropost.display_image if micropost.image.attached?%>
      </span>
      <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      </span>
      <span>
        <% if current_user?(micropost.user) %>
          <%= link_to "delete", micropost, method: :delete,
                                          data: {confirm: "You sure?"}, class: "delete-button" %>
        <% end%>
      </span>
    </div>
  </li>
</div>