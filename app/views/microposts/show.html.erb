<div class="micropost-detail-wrapper">
  <div class="content">
    <% if @micropost.user.image? %>
      <%= image_tag @micropost.user.image.url, class: "user-image" %>
    <% else %>
      <%=  image_tag "default_user.jpeg", class: "user-image" %>  
    <% end %>
    <h2><%= link_to "#{@micropost.user.name}", @micropost.user %></h2>
    <h3><%= @micropost.content %></h3>
    <h3>Likes: <%= @micropost.likes.count %></h3>
    <div class="likes_buttons_<%= @micropost.id %>">
      <%= render partial: 'likes/like', locals: { micropost: @micropost} %>
      
    </div>  
  </div>
  <h5>Liked by :</h5>
  <% @micropost.liked_users.each do |user| %>
    <li>
    <% if user.image? %>
      <%= image_tag user.image.url, class: "user-image" %>
    <% else %>
      <%=  image_tag "default_user.jpeg", class: "user-image" %>  
    <% end %>
    <%= link_to "#{@micropost.user.name}", @micropost.user %>
    </li>
  <% end %>
  <div class="to-home-button">
    <i class="fas fa-home"></i><%= link_to "Home", homes_path, class: "to-home" %>
  </div>
</div>