<% provide(:title, "Log in") %>
<div class="login-wrapper">
  <h1 class="title">Log in</h1>
  
  <div class="row forms">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(url: sessions_path, scope: :session, local: true) do |f| %>
      
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label :password, type: "password" %>
        <%=  link_to "(forgot password)", new_password_reset_path  %>
        <%= f.email_field :password, class: 'form-control', type: "password" %>
        
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>
        
        <%= f.submit "Log in", class: "btn btn-primary login" %>
      
      <% end %>
      
      <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
      <p>新しいユーザですか？ <%= link_to "新規登録はこちら", new_user_path %></p>
    </div>
  </div>
</div>