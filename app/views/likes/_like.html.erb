<% if current_user.already_liked?(@micropost) %>
        <%= button_to 'Unlike', micropost_like_path(@micropost, @like), method: :delete, class: "btn btn-dark unlike", remote: true %>
<% else %>
        <%= button_to 'Like!', micropost_likes_path(@micropost), method: :post,  class: "btn btn-primary like", remote: true %>
<% end %>