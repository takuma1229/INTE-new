<% provide(:title, 'New password') %>

<div class="edit-wrapper">
  <h1 class="edit">Set new password</h1>
  
  <div class="row signup-forms">
    <div class="col-md-6 col-md-offset-3">
      <%#= form_with(model: @user, url: password_resets_path(params[:id]), method: :patch, local: true) do |f| %>
      <%= form_with(model: @user, url: "/password_resets/#{@user.id}/edit", method: :patch, local: true) do |f| %>

        <%= render 'shared/error_messages',object: f.object %>
        <%= hidden_field_tag :email, @user.email %>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
  
        <%= f.submit "Update password", class: "btn btn-primary update" %>
      <% end %>
      
    </div>
  </div>
</div>